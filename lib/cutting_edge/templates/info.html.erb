<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Dependency Overview</title>
  <meta name="description" content="Cutting Edge">
  <meta name="author" content="Repotag">

  <link rel="stylesheet" href="/stylesheets/primer.css">



</head>

<body>


	<div class="container-lg">
		
		<header class="Header" role="banner">
			<div class="Header-item--full">
				<a href="https://github.com/repotag/cutting_edge" class="Header-link">Cutting Edge</a>
			</div>
			<div class="Header-item">
				<a class="Header-link github-button" href="https://github.com/repotag/cutting_edge" data-show-count="true" aria-label="Star repotag/cutting_edge on GitHub">Star</a>
			</div>
		</header>
		
		<br/>

	  <div class="pagehead">
			<h1><%= @name %> (<%= @language %>)</h1>
		</div>
						
		<div class="TableObject">
		  <div class="TableObject-item TableObject-item--primary">
		    <svg height="20" width="100"><image xlink:href="<%= @svg %>" /></svg>
		  </div>
		  <div class="TableObject-item">
   			<span><%= @svg %></span>
		  </div>
		</div>

		<br/>

		<% colors = {ok: 'green', outdated_patch: 'yellow', outdated_minor: 'orange', outdated_major: 'red', unknown: 'gray'} %>

		<% @specs[:locations].each do |filename, spec| %>
			<h3><%= filename %></h3>
			<br/>
			<div class="Box flex-auto">
				<div class="Box-header Box-header--gray d-flex">
					<div class="flex-auto col-md-2" role="gridcell"><b>Name</b></div>
					<div class="flex-auto col-md-2" role="gridcell"><b>Required</b></div>
					<div class="flex-auto col-md-2" role="gridcell"><b>Latest</b></div>
					<div class="flex-auto col-md-2" role="gridcell"><b>Status</b></div>
				</div>
				<% spec.each do |type, dependencies| %>
					<% next if dependencies.empty? %>
					<% dependencies.each do |dependency| %>
						<div class="Box-row Box-row--hover-gray d-flex" role="row">
							<div class="flex-auto col-md-2" role="gridcell"><a href="<%= dependency[:url] %>"><%= dependency[:name] %></a></div>
							<div class="flex-auto col-md-2" role="gridcell"><%= dependency[:required] %></div>
							<div class="flex-auto col-md-2" role="gridcell"><%= dependency[:latest] %></div>
							<div class="flex-auto col-md-2" role="gridcell"><span class="Label Label--<%= colors[type] %>"><%= type.to_s.split('_').collect(&:capitalize).join(' ') %></span></div>
						</div>
					<% end %>
				<% end %>
			</div>
			<br/>
		<% end %>
		
		<br/>
		<footer class="border rounded-1 position-sticky bottom-0 bg-gray p-3">This overview was generated by <a href="https://github.com/repotag/cutting_edge">Cutting Edge</a>.</footer>
		<br/><br/>
	</div>
	
	
	
	<script async defer src="https://buttons.github.io/buttons.js"></script>
	

</body>
</html>

